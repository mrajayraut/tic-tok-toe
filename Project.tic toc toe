void game(int z)
  {
   int a[3][3];
   int i,j,k=1;
   for(i=0;i<3;i++)
      {
    
       for(j=0;j<3;j++)
           {
           
            a[i][j]=k;
            k++;
            
            }
       
       }
    clrscr();
    for(i=0;i<3;i++)
      {
          
         printf("     |     |\n");
       for(j=0;j<3;j++)
           {                                    
            
            printf("  %d ",a[i][j]);
           if(j<2)
            {
            printf(" |");
            }
            
            }
           printf("\n");
        printf("_____|_____|_____\n");
        
       }
     ajay (a,z);
       }
    
   
    
    
