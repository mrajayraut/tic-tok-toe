int smart(int a[3][3])
{
 
      int i,j,count=0,s=0;    
                         
                       
              for(i=0;i<3;i++)
                    { 
                      for(j=0;j<3;j++)
                         {
                            if(a[2][2]==0&&a[1][1]==0)
                             {
                              a[0][0]='X';
                               
                               break;
                             }
                         
                            if(a[0][0]==0&&a[0][1]==0)
                             {
                              a[0][2]='X';
                               
                               break;
                             }
                                if(a[2][0]==0&&a[1][1]==0)
                             {
                              a[0][2]='X';
                               
                              break; 
                             }
                                if(a[0][2]==0&&a[1][1]==0)
                             {
                              a[2][0]='X';
                            
                               break;
                               }
                                if(a[2][2]==0&&a[1][1]==0)
                             {
                              a[0][0]='X';
                               break;
                               
                             }
                                if(a[2][1]==0&&a[1][1]==0)
                             {
                              a[0][1]='X';
                            
                               break;
                              }
                                if(a[0][2]==0&&a[0][1]==0)
                             {
                              a[0][0]='X';
                            
                               break;
                             }
                            if(a[1][0]==0&&a[1][1]==0)
                             {
                              a[1][2]='X';
                               
                               break;
                             } 
                                if(a[1][2]==0&&a[1][1]==0)
                             {
                              a[1][0]='X';
                            
                               break;
